        <input class="px-5 py-2 border-2 border-zinc-800 bg-transparent outline-none" type="text" 
        placeholder="image url" name="image">


        <input type="submit" class="px-5 py-3 bg-blue-400 rounded-md ml-3" value="create User">
    </form>
   </div>
