<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
   <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>

    <div class="main w-full bg-zinc-900 min-h-screen">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block mt-2 w-full outline-none rounded-md  px-5 py-2 bg-zinc-800"    type="text" placeholder="title goes here" name="title">
                <textarea class="block w-full mt-2 px-5 py-2 bg-zinc-800 rounded-md  outline-none resize-none"    placeholder="your task details" name="text">
                </textarea>

                <input type="submit" value="create task" class="bg-blue-600 rounded-md mt-2 px-4 py-2">

              
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if(Files.length > 0){ %>
             <% Files.forEach(function(val){
            %>
              <div class="task  w-72 px-3 rounded-md  bg-zinc-800">

                <h1 class="text-white text-3xl tracking-tighter ">Some task goes here</h1>
                <a href="text-blue-500 inline-block mt-4"> Read More</a>
               
            </div>
         
         
            <%
           }) %>
           <% } else { %>
             <h3 class="text-zinc-300">no task yet.</h3>

           <% } %>
          
          
           
        </div>
    </div>
    
   
    
    
</body>
</html>